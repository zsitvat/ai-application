{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Import without src prefix",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "5000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": true
        },
        {
            "name": "FastAPI + pytest (parallel)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.sh",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "pytest"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "FastAPI + LangGraph Dev (parallel)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug LangGraph Dev",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/langgraph",
            "args": [
                "dev"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: pytest (tests folder)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}