{
    "agents": {
        "topic_validator": {
            "enabled": true,
            "model": {
                "provider": "azure",
                "name": "gpt-4o-mini",
                "deployment": "chatboss_sweden-central_chat_gpt-4o-mini"
            },
            "allowed_topics": [
                "work",
                "career",
                "job",
                "professional",
                "workplace",
                "employment"
            ],
            "invalid_topics": [
                "personal",
                "politics",
                "religion",
                "inappropriate",
                "programing"
            ]
        },
        "personal_data_filter": {
            "enabled": true,
            "model": {
                "provider": "azure",
                "name": "gpt-4o-mini",
                "deployment": "chatboss_sweden-central_chat_gpt-4o-mini"
            },
            "sensitive_data_types": [
                "email",
                "phone",
                "ssn",
                "credit_card",
                "address",
                "full_name"
            ],
            "mask_char": "*"
        },
        "retriever_agent": {
            "enabled": true,
            "chain": {
                "model": {
                    "provider": "azure",
                    "name": "gpt-4o-mini",
                    "deployment": "chatboss_sweden-central_chat_gpt-4o-mini"
                },
                "prompt_id": "retriever-agent-prompt",
                "debug": false
            },
            "tool_choice": "auto",
            "tools": {
                "vector_retriever_tool": {
                    "type": "vector_search",
                    "index_name": "knowledge_base",
                    "search_type": "mmr",
                    "search_kwargs": {
                        "k": 10,
                        "lambda_mult": 0.5
                    },
                    "embedding_model": {
                        "provider": "azure",
                        "name": "text-embedding-3-large",
                        "deployment": "chatboss_sweden-central_embedding_text-embedding-3-large_1"
                    }
                }
            }
        },
        "issue_reporter_agent": {
            "enabled": true,
            "chain": {
                "model": {
                    "provider": "azure",
                    "name": "gpt-4o-mini",
                    "deployment": "chatboss_sweden-central_chat_gpt-4o-mini"
                },
                "prompt_id": "issue-reporter-agent-prompt",
                "debug": false
            },
            "tool_choice": "auto",
            "tools": {
                "issue_tracker_tool": {
                    "type": "issue_tracker",
                    "priority_levels": [
                        "low",
                        "medium",
                        "high",
                        "critical"
                    ],
                    "categories": [
                        "technical",
                        "account",
                        "billing",
                        "feature_request",
                        "bug_report"
                    ],
                    "required_fields": [
                        "description",
                        "priority",
                        "category"
                    ]
                }
            }
        },
        "recruiter_agent": {
            "enabled": true,
            "chain": {
                "model": {
                    "provider": "azure",
                    "name": "gpt-4o-mini",
                    "deployment": "chatboss_sweden-central_chat_gpt-4o-mini",
                    "temperature": 0.25
                },
                "prompt_id": "recruiter",
                "debug": false
            },
            "tool_choice": "auto",
            "tools": {
                "get_position_tool": {
                    "type": "position_search",
                    "description": "Pozíció kereső tool, amely megye, város, szakterület, típus alapján keres fuzzy metadata szűréssel redis adatbázisban.",
                    "input_fields": [
                        "megye",
                        "varos",
                        "szakterulet",
                        "tipus"
                    ],
                    "search_mode": "fuzzy",
                    "index_name": "positions",
                    "metadata_filter": true,
                    "backend": "redis"
                }
            }
        }
    },
    "supervisor": {
        "enabled": true,
        "chain": {
            "model": {
                "provider": "azure",
                "name": "gpt-4o-mini",
                "deployment": "chatboss_sweden-central_chat_gpt-4o-mini"
            },
            "prompt_id": "supervisor-prompt",
            "debug": false
        },
        "tool_choice": "auto",
        "tools": {}
    },
    "exception_chain": {
        "enabled": true,
        "chain": {
            "model": {
                "provider": "azure",
                "name": "gpt-4o-mini",
                "deployment": "chatboss_sweden-central_chat_gpt-4o-mini"
            },
            "prompt_id": "exception-chain-prompt",
            "debug": false
        },
        "tool_choice": "auto",
        "tools": {}
    },
    "max_input_length": 4000,
    "chat_memory_db": 0,
    "chat_memory_index_name": "chat_memory",
    "chat_memory_type": "redis",
    "chat_history_max_length": 12,
    "tags": [
        "recruiter"
    ],
    "enable_checkpointer": true,
    "checkpointer_type": "redis",
    "allow_supervisor_finish": true
}